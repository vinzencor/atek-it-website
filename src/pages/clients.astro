---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ClientsHero from '../components/ClientsHero.tsx';
import ClientsContent from '../components/ClientsContent.tsx';
---

<Layout 
  title="Clients - ATEK IT | Trusted by Forward-Thinking Organizations"
  description="ATEK IT serves clients across healthcare, finance, education, retail, and manufacturing. Discover how we help organizations achieve digital transformation and operational excellence."
  keywords="ATEK IT clients, digital transformation, healthcare IT, finance technology, education platforms, retail solutions, manufacturing systems"
>
  <Header />
  
  <main>
    <ClientsHero client:load />
    <ClientsContent client:load />

    <!-- Call to Action - Keeping this section as requested -->
    <section class="py-16 sm:py-20 bg-gradient-to-br from-gray-900 to-primary-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 sm:mb-16">
          <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-4 sm:mb-6 px-2 sm:px-0">
            Ready to Join Our Success Stories?
          </h2>
          <p class="text-lg sm:text-xl text-white/90 max-w-3xl mx-auto mb-6 sm:mb-8 px-2 sm:px-0">
            Whether you're scaling a startup, digitizing an enterprise, or streamlining your consulting 
            business, ATEK IT is your trusted partner for digital excellence.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 items-center">
          <div class="space-y-6 sm:space-y-8">
            <div class="flex items-start space-x-4">
              <svg class="h-5 w-5 sm:h-6 sm:w-6 text-primary-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-base sm:text-lg mb-1">Visit Our Office</h3>
                <p class="text-white/90 text-sm sm:text-base">
                  7460 Warren Pkwy, Suite 100-148<br />
                  Frisco, TX 75034
                </p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <svg class="h-5 w-5 sm:h-6 sm:w-6 text-primary-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-base sm:text-lg mb-1">Call Us</h3>
                <a 
                  href="tel:+14692692345" 
                  class="text-white/90 hover:text-white transition-colors duration-200 text-sm sm:text-base"
                >
                  +1 (469) 269-2345
                </a>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <svg class="h-5 w-5 sm:h-6 sm:w-6 text-primary-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-base sm:text-lg mb-1">Email Us</h3>
                <a
                  href="mailto:info@atekit.com"
                  class="text-white/90 hover:text-white transition-colors duration-200 text-sm sm:text-base"
                >
                  info@atekit.com
                </a>
              </div>
            </div>
          </div>

          <div class="bg-white/10 backdrop-blur-lg rounded-xl sm:rounded-2xl p-6 sm:p-8">
            <h3 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6">Ready to Get Started?</h3>
            <p class="text-white/90 mb-4 sm:mb-6 text-sm sm:text-base">
              Choose how you'd like to connect with our team and begin your digital transformation journey.
            </p>
            
            <div class="space-y-3 sm:space-y-4">
              <a
                href="/contact#contact-section"
                class="w-full bg-primary-600 text-white px-4 sm:px-6 py-3 sm:py-4 rounded-lg hover:bg-primary-700 transition-colors duration-200 font-semibold flex items-center justify-center space-x-2 text-sm sm:text-base"
              >
                <span>Let's Talk</span>
                <svg class="h-4 w-4 sm:h-5 sm:w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
              
              <a
                href="/contact#contact-section"
                class="w-full border-2 border-white/30 text-white px-4 sm:px-6 py-3 sm:py-4 rounded-lg hover:bg-white/10 transition-colors duration-200 font-semibold flex items-center justify-center space-x-2 text-sm sm:text-base"
              >
                <span>Schedule a Discovery Call</span>
                <svg class="h-4 w-4 sm:h-5 sm:w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>